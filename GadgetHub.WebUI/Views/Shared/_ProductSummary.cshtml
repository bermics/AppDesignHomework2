@model GadgetHub.Domain.Entities.Gadget
@using GadgetHub.Domain.Entities

<div class="card mb-3 shadow-sm">
    <div class="row no-gutters">
        <div class="col-md-4 icon-container d-flex align-items-center justify-content-center">
            <i class="fa-solid fa-microchip fa-5x text-primary"></i>
        </div>
        <div class="col-md-8">
            <div class="card-body text-dark">
                <h5 class="card-title font-weight-bold">@Model.Name</h5>
                <p class="card-text mb-1">
                    <i class="fa-solid fa-building text-secondary"></i> <strong>Brand:</strong> @Model.Brand
                </p>
                <p class="card-text mb-1">
                    <i class="fa-solid fa-tag text-secondary"></i> <strong>Price:</strong>
                    <span class="price-tag">$@Model.Price.ToString("F2")</span>
                </p>
                <p class="card-text">
                    <i class="fa-solid fa-info-circle text-secondary"></i> @Model.Description
                </p>
                <span class="badge badge-pill badge-secondary">@Model.Category</span>
            </div>
        </div>
    </div>
</div>